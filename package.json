{
  "name": "gh-repo-manager",
  "version": "0.1.0",
  "description": "Node.js CLI tool to list and delete GitHub repositories via the official API.",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "gh-repo-manager": "./src/index.js"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/migudevelop/gh-repo-manager.git"
  },
  "homepage": "https://github.com/migudevelop/gh-repo-manager#readme",
  "scripts": {
    "start:dev": "node --env-file .env src/index.js",
    "lint:fix": "eslint --fix ./src/**/*.js",
    "lint": "eslint ./src/**/*.js",
    "prettify": "prettier . --write",
    "prettier:check": "prettier . --check",
    "prepare": "husky install"
  },
  "keywords": [
    "gh-repo-manager",
    "github",
    "cli",
    "repository",
    "manager",
    "delete",
    "list",
    "nodejs",
    "octokit"
  ],
  "author": "Miguel Mart√≠nez",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "1.0.0-alpha.7",
    "@octokit/rest": "22.0.1",
    "colorette": "2.0.20",
    "commander": "14.0.0",
    "p-limit": "7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.29.0",
    "eslint": "9.29.0",
    "globals": "16.2.0",
    "husky": "8.0.0",
    "lint-staged": "16.1.2",
    "prettier": "3.6.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
